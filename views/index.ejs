  gsap.registerPlugin(ScrollTrigger);
  const tl=gsap.timeline();
  tl.to('.h-tag',{opacity:1,duration:.5,ease:'power2.out'})
    .to('.h-name',{opacity:1,y:0,duration:1,ease:'power4.out'},'<.1')
    .to('.h-typed',{opacity:1,duration:.5},'<.3')
    .to('.h-desc',{opacity:1,duration:.6},'<.2')
    .to('.h-btns',{opacity:1,duration:.5},'<.15')
    .to('.h-nums',{opacity:1,duration:.5},'<.1')
    .to('.h-terminal',{opacity:1,x:0,duration:.9,ease:'power3.out'},'<-.2')
    .to('#scc',{opacity:1,duration:.5},'<.3');

  setTimeout(typeInit,900);
  setTimeout(countUp,1100);
  initScrollAnims();
}

/* ═══════ TYPEWRITER ═══════ */
const ROLES=['PENETRATION TESTER','AI SECURITY ENGINEER','PYTHON TOOL BUILDER','SECURITY RESEARCHER','ETHICAL HACKER'];
let ri=0,ci=0,del=false;
function typeInit(){tick()}
function tick(){
  const el=document.getElementById('typed'),w=ROLES[ri];
  if(!del){
    el.textContent=w.slice(0,++ci);
    if(ci===w.length){del=true;setTimeout(tick,2000);return}
  } else {
    el.textContent=w.slice(0,--ci);
    if(ci===0){del=false;ri=(ri+1)%ROLES.length}
  }
  setTimeout(tick,del?44:88);
}

/* ═══════ COUNTER ═══════ */
function countUp(){
  document.querySelectorAll('[data-count]').forEach(el=>{
    const tgt=+el.dataset.count;let n=0;const step=tgt/60;
    const iv=setInterval(()=>{
      n=Math.min(n+step,tgt);
      el.textContent=Math.floor(n)+(el.closest('.hn').querySelector('.l').textContent.includes('%')?'%':'');
      if(n>=tgt)clearInterval(iv);
    },28);
  });
}

/* ═══════ SCROLL REVEAL — reliable IntersectionObserver ═══════ */
function initScrollAnims(){
  // IntersectionObserver for .reveal / .reveal-l / .reveal-r
  const io=new IntersectionObserver(entries=>{
    entries.forEach(e=>{
      if(e.isIntersecting){
        e.target.classList.add('visible');
        io.unobserve(e.target);
      }
    });
  },{threshold:0.05,rootMargin:'0px 0px -30px 0px'});

  document.querySelectorAll('.reveal,.reveal-l,.reveal-r').forEach((el,i)=>{
    // stagger via delay on transition
    el.style.transitionDelay=(i*0.04)+'s';
    io.observe(el);
  });

  // skill cards stagger
  document.querySelectorAll('.sk-card').forEach((el,i)=>{
    el.style.transitionDelay=(i*0.08)+'s';
  });

  // prof bars
  const barObs=new IntersectionObserver(entries=>{
    entries.forEach(e=>{
      if(e.isIntersecting){
        e.target.querySelectorAll('.pb-fill').forEach((b,i)=>{
          setTimeout(()=>{b.style.width=b.dataset.w+'%'},i*130);
        });
        barObs.unobserve(e.target);
      }
    });
  },{threshold:.2});
  const bars=document.getElementById('bars');
  if(bars)barObs.observe(bars);

  // parallax hero name
  gsap.to('.h-name',{yPercent:-15,ease:'none',scrollTrigger:{trigger:'#hero',start:'top top',end:'bottom top',scrub:true}});
}

/* ═══════ CARD INTERACTIONS ═══════ */
document.querySelectorAll('.sk-card').forEach(card=>{
  card.addEventListener('mousemove',e=>{
    const r=card.getBoundingClientRect();
    card.style.setProperty('--mx',(e.clientX-r.left)/r.width*100+'%');
    card.style.setProperty('--my',(e.clientY-r.top)/r.height*100+'%');
  });
});

document.querySelectorAll('.proj-card').forEach(card=>{
  card.addEventListener('mousemove',e=>{
    const r=card.getBoundingClientRect();
    const x=(e.clientX-r.left)/r.width-.5,y=(e.clientY-r.top)/r.height-.5;
    card.style.transform='perspective(900px) rotateY('+(x*10)+'deg) rotateX('+(-y*10)+'deg) translateY(-6px)';
    card.style.setProperty('--mx',(e.clientX-r.left)/r.width*100+'%');
    card.style.setProperty('--my',(e.clientY-r.top)/r.height*100+'%');
  });
  card.addEventListener('mouseleave',()=>{card.style.transform='perspective(900px) rotateY(0) rotateX(0)'});
});

document.querySelectorAll('.magnetic').forEach(el=>{
  el.addEventListener('mousemove',e=>{
    const r=el.getBoundingClientRect();
    el.style.transform='translate('+((e.clientX-r.left-r.width/2)*.3)+'px,'+((e.clientY-r.top-r.height/2)*.3)+'px)';
  });
  el.addEventListener('mouseleave',()=>{el.style.transform='translate(0,0)'});
});

/* ═══════ GLITCH EFFECT on hero name (subtle) ═══════ */
(function(){
  const nm=document.querySelector('.h-name');
  if(!nm)return;
  setInterval(()=>{
    nm.style.textShadow='2px 0 rgba(0,245,255,.4),-2px 0 rgba(139,47,255,.4)';
    setTimeout(()=>{nm.style.textShadow='none'},80);
  },4000+Math.random()*3000);
})();
</script>
